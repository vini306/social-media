{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "import/extensions": ["warn", "never"],
        "class-methods-use-this": 0
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [
              ".ts"          
            ]
          }
        }
      }
}
